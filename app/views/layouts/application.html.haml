!!!
%html
  %head
    %title Footprint
    = stylesheet_link_tag    "bootstrap", :media => "all"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav
      %ul.left
        / .button_link
        %li= button_to "footprint", root_path, class: "nav_button bg-white"
        -if current_user
          %li= link_to image_tag(gravatar(@user,50)), user_path(@user)
          %li=button_to "Authorize with Moves", '/auth/moves', class: "nav_button bg-white"
          %li= link_to image_tag( 'moves_logo.png', size: '50x50'), 'auth/moves'
      %ul.right
        -if current_user
          %li=button_to "Logout", session_path(@user.object_id), :method=>:delete, class: "nav_button bg-blue"

    .container
      = yield


